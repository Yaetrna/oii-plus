{
  "manifest_version": 3,
  "name": "osu! Improvement Indicator Plus",
  "version": "1.0.0",
  "description": "An enhanced improvement indicator for osu! player profiles. Shows how fast you're improving compared to the average player.",
  
  "author": "Yaetrna",
  
  "homepage_url": "https://github.com/Yaetrna/oii-plus",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "oii-plus@yaetrna.dev",
      "strict_min_version": "109.0"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "osu! Improvement Indicator"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "https://osu.ppy.sh/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://osu.ppy.sh/users/*"],
      "js": ["scripts/content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*", "images/*"],
      "matches": ["https://osu.ppy.sh/*"]
    }
  ]
}
